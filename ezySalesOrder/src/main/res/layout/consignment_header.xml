<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/listing_screen"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/rounded_tab_left"
                android:gravity="center"
                android:padding="2dp"
                android:text="Listing"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_screen"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/rounded_tab_center"
                android:gravity="center"
                android:padding="2dp"
                android:text="Customer"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />



            <TextView
                android:id="@+id/sum_screen"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:background="@drawable/rounded_tab_right"
                android:gravity="center"
                android:padding="2dp"
                android:text="Summary"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F4FBFF"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/customer_layout"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="#242F4B"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/cust_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="CustomerName"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listing_screen_tab"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.62"
                android:background="@drawable/rounded_tab_left"
                android:gravity="center"
                android:padding="2dp"
                android:text="Listing"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_screen_tab"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.62"
                android:background="@drawable/rounded_tab_center"
                android:gravity="center"
                android:padding="2dp"
                android:text="Customer"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addProduct_screen_tab"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.62"
                android:background="@drawable/rounded_tab_center"
                android:gravity="center"
                android:padding="2dp"
                android:text="Product"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sum_screen_tab"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="0.62"
                android:background="@drawable/rounded_tab_right"
                android:gravity="center"
                android:padding="2dp"
                android:text="Summary"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customer_layout_black"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="#d0d1cb"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/cust_name_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="CustomerName"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:typeface="sans" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>