<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/popup_slno_layout"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/lblSno"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_name_layout"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/lblName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_remark_layout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/lblRemark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/popup_qty_layout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/lblqty"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_cqty_layout"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:visibility="gone">

        <TextView
            android:id="@+id/lblCqty"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_lqty_layout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="right" 
        android:visibility="gone">

        <TextView
            android:id="@+id/lblLqty"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/list_content_text_color"
            android:textSize="16dp" />
    </LinearLayout>

