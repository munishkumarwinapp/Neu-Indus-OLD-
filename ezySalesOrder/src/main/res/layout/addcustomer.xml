<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="8.7" >

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:background="@drawable/home_bg"
        android:orientation="horizontal"
        android:weightSum="5" >

        <LinearLayout
            android:id="@+id/back_btn_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/left_separator"
                android:contentDescription="@string/title_bar_left_button"
                android:src="@mipmap/back_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pagetitle_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/page_Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:text="Add Customer"
                android:textColor="@color/title_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/edit_customer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/ic_edit"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/save_customer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/ic_save_img"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/offlineLayout"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@drawable/offline_pattern_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:visibility="gone" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_weight="8.7"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/cust_add_code_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_code_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Customer Code"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_code_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:text=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_name_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_name_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Customer Name"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_name_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=" "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_person_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_person_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Contact Person"

                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_person_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_add1_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_add1_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Address"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_add1_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_add2_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_add2_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Address2"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans"
                    android:visibility="gone" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_add2_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans"  >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_add3_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_add3_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Address3"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans"
                    android:visibility="gone" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_add3_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_phn_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_phn_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:editable="false"
                    android:gravity="left|center"
                    android:hint="PhoneNo"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_phn_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|phone"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_handphn_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_handphn_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Hand phoneNo"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_handphn_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned|phone"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_faxno_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_faxno_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Fax No"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="13sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_faxno_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="phone|numberSigned"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_email_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_email_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="Email"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_tax_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_tax_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="HaveTax"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <Spinner
                    android:id="@+id/cust_taxcode"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/customer_spinner"
                    android:paddingLeft="5dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </Spinner>

                <EditText
                    android:id="@+id/cust_add_tax_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:hint=" "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans"
                    android:visibility="visible" >
                </EditText>

                <LinearLayout
                    android:id="@+id/cust_add_grpcode_ll"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/tax_yes"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector"
                        android:text="Yes"
                        android:visibility="visible" />

                    <RadioButton
                        android:id="@+id/tax_no"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector"
                        android:text="No"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_grpcode_txt"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="CustomerGroup Code"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <Spinner
                    android:id="@+id/cust_add_grpcode_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/customer_spinner"
                    android:paddingLeft="5dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_termcode_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_termcode_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="TermCode"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <Spinner
                    android:id="@+id/cust_add_termcode_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/customer_spinner"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_areacode_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_areacode_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="AreaCode"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_areacode_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@mipmap/ic_search_normal"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_vancode_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_vancode_txt"
                    android:layout_width="142dp"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="VanCode"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_vancode_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableRight="@mipmap/ic_search_normal"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cust_add_creditlimit_ll"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/cust_add_creditlimit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="left|center"
                    android:hint="CreditLimit"
                    android:textColorHint="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/cust_add_creditlimit_ed"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/edittext_bg"
                    android:hint=""
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingLeft="5dp"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>