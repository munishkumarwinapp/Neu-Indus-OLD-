            <LinearLayout
                android:id="@+id/productcode_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dip"
                android:layout_weight=".7"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/productcode_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Code"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sl_codefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".3"
                    android:gravity="center_vertical"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
                
                <ImageView
                android:id="@+id/arrow"
                android:layout_width="0dp"
                android:layout_height="38dp" 
                android:layout_weight=".1"
                android:src="@drawable/arrow_up"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/productname_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dip"
                android:layout_weight=".7"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/productname_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sl_namefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".4"
                    android:gravity="center_vertical"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pcspercarton_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dip"
                android:layout_weight=".7"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pcspercarton_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".22"
                    android:text="Pcs/Ctn"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sl_cartonPerQty"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".06"
                    android:gravity="center_vertical"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/uom_label"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/textview_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sl_uom"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight=".1"
                    android:gravity="center_vertical"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/specification_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/specification_label"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="Specification"
                        android:textColor="@color/textview_text_color"
                        android:textSize="16sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".01"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/textview_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sl_specification"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight=".4"
                        android:gravity="center_vertical"
                        android:textColor="#3a3a3c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dip"
                    android:layout_weight=".7"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/sl_cartonQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:hint="Carton Qty"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/sl_looseQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:hint="Loose Qty"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/sl_qty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:hint="Qty"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dip"
                    android:layout_weight=".7"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dip"
                        android:layout_marginTop="6dip"
                        android:layout_weight=".7"
                        android:gravity="right"
                        android:text="Price"
                        android:textColor="@color/textview_text_color"
                        android:textSize="16sp"
                        android:typeface="sans"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/sl_foc"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".1"
                        android:gravity="center"
                        android:hint="Foc"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:visibility="visible" >
                    </EditText>

                    <EditText
                        android:id="@+id/sl_exchangeQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight=".1"
                        android:gravity="center"
                        android:hint="Exchange Qty"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:visibility="visible" >
                    </EditText>
                    <!--
                    <EditText
                        android:id="@+id/sl_price"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight=".33"
                        android:gravity="center"
                        android:hint="Price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal" >
                    </EditText>
                    -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/label_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="6dip"
                    android:layout_weight=".4"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal" 
                    >

                    <TextView
                        android:id="@+id/txt_cPrice"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="C.Price"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="gone" >
                    </TextView>

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Price"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" 
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/txt_Total"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Total"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/total_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="0dip"
                    android:layout_weight=".2"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/total_txt"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dip"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:text="Total"
                        android:textColor="@color/textview_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/sl_cprice"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".40"
                        android:gravity="center"
                        android:hint="Ctn Price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal" 
                        android:visibility="gone">
                    </EditText>

                    <EditText
                        android:id="@+id/sl_price"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".40"
                        android:gravity="center"
                        android:hint="Price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal" >
                    </EditText>

                    <EditText
                        android:id="@+id/sl_total"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight=".40"
                        android:background="@drawable/labelbg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="0.00"
                        android:inputType="none"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </EditText>
                </LinearLayout>

                <EditText
                    android:id="@+id/sl_netTotal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" >
                </EditText>

                <EditText
                    android:id="@+id/sl_tax"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" >
                </EditText>

                <EditText
                    android:id="@+id/sl_itemDiscount"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" >
                </EditText>

                <EditText
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="gone" >
                </EditText>

              
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
