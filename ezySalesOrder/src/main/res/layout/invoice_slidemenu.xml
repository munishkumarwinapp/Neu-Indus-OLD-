<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="39dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/qrcode"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/right_separator"
                android:onClick="scanMarginScanner"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/qrcode"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/search_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/ic_find"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/date_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/crm_date"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/custcode_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/ic_new_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/done_icon"
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="3dip"
                android:background="#333a66"
                android:drawableLeft="@mipmap/crm_tick"
                android:padding="7dip"
                android:text=" Done"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"/>

        </LinearLayout>
        <ImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/right_separator"
            android:contentDescription="@string/title_bar_right_button"
            android:src="@mipmap/ic_save_img"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/printer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_separator"
                android:contentDescription="@string/title_bar_right_button"
                android:src="@mipmap/ic_menu_print"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/title_text_color"
        android:textSize="19sp"
        android:textStyle="bold"
        android:typeface="sans"/>



</RelativeLayout>