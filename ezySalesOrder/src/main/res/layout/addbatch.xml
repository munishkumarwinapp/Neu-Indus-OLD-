<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/salesproduct_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:weightSum="7.46">

    <com.winapp.util.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.46"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/sl_codelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/header_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7">

                <ImageButton
                    android:id="@+id/batch_cancel"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@mipmap/batch_clear"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="Add Batch"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/batch_finish"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@mipmap/batch_finish"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/slcodelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/batch_codefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1.96"
                    android:background="@drawable/labelbg"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Code"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:typeface="sans">
                </EditText>

                <EditText
                    android:id="@+id/batch_namefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="4.10"
                    android:background="@drawable/labelbg"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Description"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:typeface="sans">
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gra_carton_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/batch_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/txt_batchno"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:text="Batch No"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>

                    <TextView
                        android:id="@+id/txt_loose"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:text="Expiry Date"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_weightlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/batchno"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.97"
                        android:hint="Batch No"
                        android:imeOptions="actionNext"
                        android:inputType="text">
                    </EditText>

                    <EditText
                        android:id="@+id/expirydate"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="4.05"
                        android:cursorVisible="false"
                        android:drawableRight="@mipmap/ic_calendar"
                        android:focusable="false"
                        android:hint="Expiry Date">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_carton_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/txt_batch_carton"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Carton Qty"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>

                    <TextView
                        android:id="@+id/txt_batch_loose"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Loose Qty"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>

                    <TextView
                        android:id="@+id/txt_batch_qty"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Quantity"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_qty_weightlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/batch_cartonQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Carton"
                        android:imeOptions="actionNext"
                        android:inputType="number">
                    </EditText>

                    <EditText
                        android:id="@+id/batch_looseQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Loose"
                        android:imeOptions="actionNext"
                        android:inputType="number">
                    </EditText>

                    <EditText
                        android:id="@+id/batch_qty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Qty"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal">
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.30"
                        android:gravity="center|left"
                        android:text="Pcs per carton"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/batchfoc_text"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.20"
                        android:gravity="center|left"
                        android:text="Foc"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/serial_id"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1.30"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_weightlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <EditText
                        android:id="@+id/batch_cartonPerQty"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1.92"
                        android:background="@drawable/labelbg"
                        android:focusable="false"
                        android:gravity="center"
                        android:inputType="none"
                        android:textColor="#3a3a3c"
                        android:textSize="16sp"
                        android:typeface="sans">
                    </EditText>

                    <EditText
                        android:id="@+id/batch_focQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:imeOptions="actionNext"
                        android:inputType="number">
                    </EditText>

                    <ImageButton
                        android:id="@+id/bacth_add"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.83"
                        android:background="@null"
                        android:src="@mipmap/ic_new_search"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/batch_grid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:text="Batch No"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="1.6"
                        android:gravity="center"
                        android:text="Expiry Date"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="CQty"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="LQty"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt5"
                        android:layout_width="0dip"
                        android:layout_height="30dp"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Qty"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/batch_list"
                    style="@style/listview_style"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:divider="@null">
                </ListView>

                <LinearLayout
                    android:id="@+id/totallayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dip"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="Count"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="invisible">
                    </TextView>

                    <EditText
                        android:layout_width="0dip"
                        android:layout_height="32dip"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dip"
                        android:layout_weight="1"
                        android:background="@drawable/labelbg"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="0.00"
                        android:inputType="none"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dip"
                        android:layout_weight=".9"
                        android:gravity="right|center_vertical"
                        android:text="Total Qty"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans">
                    </TextView>

                    <EditText
                        android:id="@+id/edtotalqty"
                        android:layout_width="0dip"
                        android:layout_height="32dip"
                        android:layout_marginBottom="1dip"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="1dip"
                        android:layout_weight="1.1"
                        android:background="@drawable/labelbg"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="0.00"
                        android:inputType="none"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:typeface="sans"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.winapp.util.VerticalScrollview>

</LinearLayout>