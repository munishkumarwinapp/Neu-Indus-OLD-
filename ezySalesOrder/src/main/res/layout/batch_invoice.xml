<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salesproduct_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="8.46" >

    <com.winapp.util.VerticalScrollview
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.46"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/sl_codelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/header_bg"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="8" >

                <ImageButton
                    android:id="@+id/batch_cancel"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@mipmap/batch_clear" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="Add Batch"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/batch_finish"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@mipmap/batch_finish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/slcodelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="6" >

                <EditText
                    android:id="@+id/batch_codefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1.96"
                    android:background="@drawable/labelbg"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Code"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </EditText>

                <EditText
                    android:id="@+id/batch_namefield"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="4.10"
                    android:background="@drawable/labelbg"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Description"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:paddingLeft="8dp"
                    android:textColor="#3a3a3c"
                    android:textSize="16sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gra_carton_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/batch_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6" >

                    <TextView
                        android:id="@+id/txt_batchno"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:text="Batch No"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>

                    <TextView
                        android:id="@+id/txt_loose"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:text="Expiry Date"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_weightlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="6" >

                    <EditText
                        android:id="@+id/batchno"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Batch No"
                        android:imeOptions="actionNext"
                        android:inputType="text" >
                    </EditText>

                    <EditText
                        android:id="@+id/expirydate"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="3"
                        android:cursorVisible="false"
                        android:drawableRight="@mipmap/ic_calendar"
                        android:focusable="false"
                        android:hint="Expiry Date" >
                    </EditText>
                    
                    <ImageButton
                    android:id="@+id/batch_add"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@mipmap/ic_new_search"
                    android:visibility="invisible"/>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_carton_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6" >

                    <TextView
                        android:id="@+id/txt_batch_carton"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Carton Qty"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>

                    <TextView
                        android:id="@+id/txt_batch_loose"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Loose Qty"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>

                    <TextView
                        android:id="@+id/txt_batch_qty"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Quantity"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/batch_qty_weightlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="8" >

                    <EditText
                        android:id="@+id/batch_cartonQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Carton"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/batch_looseQty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Loose"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>

                    <EditText
                        android:id="@+id/batch_qty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Qty"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>
                                      
                    <EditText
                        android:id="@+id/batch_foc_qty"
                        style="@style/edittext_style"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="Foc"
                        android:imeOptions="actionNext"
                        android:inputType="number" >
                    </EditText>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sales_carton_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6.3" >

                    <TextView
                        android:id="@+id/txt_pcspercarton"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Pcs per carton"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6" >

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.9"
                        android:background="@null"
                        android:src="@mipmap/ic_new_search"
                        android:visibility="invisible" />

                    <!-- <EditText -->
                    <!-- android:id="@+id/batch_cartonPerQty" -->
                    <!-- android:layout_width="0dp" -->
                    <!-- android:layout_height="35dp" -->
                    <!-- android:layout_margin="2dp" -->
                    <!-- android:layout_marginLeft="10dp" -->
                    <!-- android:layout_weight="1.95" -->
                    <!-- android:background="@drawable/labelbg" -->
                    <!-- android:ems="10" -->
                    <!-- android:focusable="false" -->
                    <!-- android:gravity="center" -->
                    <!-- android:inputType="none" -->
                    <!-- android:textColor="#3a3a3c" -->
                    <!-- android:textSize="16sp" -->
                    <!-- android:typeface="sans" > -->
                    <!-- </EditText> -->

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1.83"
                        android:background="@null"
                        android:src="@mipmap/ic_new_search"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/serial_id"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.1"
                        android:gravity="center|left"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="4.2"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/batch_grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/header_bg"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/txt1"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Batch No"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/txt2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Expiry Date"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/avl_cQty_layout"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:id="@+id/avl_cQty"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Avl.Carton"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/avl_lQty_layout"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Avl.Loose"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/avl_Qty_layout"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Qty"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/batch_cQty_layout"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Carton"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/batch_lQty_layout"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="right" >

                            <TextView
                                android:id="@+id/batch_lQty"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Loose"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/batch_Qty_layout"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/batch_Qty"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="Qty"
                                android:textColor="#FFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/batch_list"
                            style="@style/listview_style"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:divider="@null" >
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/totallayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/header_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="Pcspercarton"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:visibility="visible" >
                </TextView>

                <EditText
                    android:id="@+id/batch_cartonPerQty"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_marginBottom="1dip"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="1dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/labelbg"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dip"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="Total Qty"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/edtotalqty"
                    android:layout_width="0dip"
                    android:layout_height="32dip"
                    android:layout_marginBottom="1dip"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="1dip"
                    android:layout_weight="1.1"
                    android:background="@drawable/labelbg"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="0.00"
                    android:inputType="none"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>
    </com.winapp.util.VerticalScrollview>

</LinearLayout>