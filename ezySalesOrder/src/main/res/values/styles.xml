    </style>
    <!-- Checkbox styles -->
    <style name="checkbox_style" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="checkbox_style_green" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector_green</item>
        <item name="android:checked">false</item>
        <item name="android:textColor">@color/checkbox_text_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Styles related to list view -->
    <style name="listview_style" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.5dip</item>
    </style>

    <style name="list_item_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:background">@drawable/list_item_bg</item>
    </style>

   <style name="list_text_style" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textColor">@color/list_content_text_color</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
   <style name="barcode_edittext" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/edittext_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:padding">2dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">1dip</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
   <style name="PauseDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/bottom_sheet</item>
</style>

   <style name="listitem_text_style" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
        <item name="android:textColor">@color/list_content_text_color</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Checkbox styles -->
    <style name="checkbox_style_map" parent="android:Widget.CompoundButton.CheckBox">
