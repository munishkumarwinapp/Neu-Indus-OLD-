<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dip"
    android:layout_margin="10dip"
    android:background="#f8f7fd"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/list_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Task Id"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/list_img1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="left|center"
            android:layout_margin="7dip"
            android:src="@mipmap/crm_username" />

        <TextView
            android:id="@+id/list_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Task Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/list_img2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="right|center"
            android:layout_margin="7dip"
            android:src="@mipmap/crm_option"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginTop="5dip"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/list_img3"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_gravity="left|center"
            android:layout_margin="8dip"
            android:src="@mipmap/crm_desc" />

        <TextView
            android:id="@+id/list_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dip"
            android:gravity="left"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Message"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/list_img4"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_gravity="left|center"
            android:layout_margin="12dip"
            android:src="@mipmap/crm_open" />

        <TextView
            android:id="@+id/list_text3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center|left"
            android:text="status"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/list_img5"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="left|center"
            android:layout_margin="7dip"
            android:src="@mipmap/crm_ic_date" />

        <TextView
            android:id="@+id/list_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dip"
            android:gravity="center|left"
            android:text="date"
            android:textColor="#ff6000"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>