<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/validate_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="8.5" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/home_bg"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="Settings"
            android:textColor="@color/title_text_color"
            android:textSize="19sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_margin="1dip"
            android:src="@mipmap/convert_online"
            android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="Version : 2"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.49"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="1.33"
            android:src="@mipmap/splashlogo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/flsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       
        android:layout_weight="1.36"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4" >

        <!--
        <EditText
            android:id="@+id/ed_validate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/edittextbg"
            android:hint="Domain URL"
            android:inputType="textPersonName"
            android:padding="2dp"
            android:textColor="#3a3a3c"
            android:textSize="16sp"
            android:typeface="sans" >

            <requestFocus />
        </EditText>
        -->

        <EditText
            android:id="@+id/ed_validate"
            style="@style/login_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domain URL"
            android:inputType="textPersonName"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/butLt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/bt_validate"
            style="@style/button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="Validate" />
    </LinearLayout>

</LinearLayout>