<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeaea"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_gravity="center"
        android:background="@drawable/ic_bottom_bg">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@mipmap/ic_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:text="Manual Stock"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@mipmap/ic_tick" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@mipmap/ic_title_line_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/codelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoi_currencycodelbl"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:hint=" Product Code"
                android:textColorHint="@color/textview_text_color"
                android:textSize="16sp"
                android:typeface="sans"></TextView>

            <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:text="jnbfjkdsf"
                android:textColor="#3a3a3c"
                android:textSize="16sp"
                android:typeface="sans"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:hint=" Product Name"
                android:textColorHint="@color/textview_text_color"
                android:textSize="16sp"
                android:typeface="sans"></TextView>

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:text="jnbfjkdsf"
                android:textColor="#3a3a3c"
                android:textSize="16sp"
                android:typeface="sans"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stocklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stock"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:hint=" StockInHand"
                android:textColorHint="@color/textview_text_color"
                android:textSize="16sp"
                android:typeface="sans"></TextView>

            <TextView
                android:id="@+id/stockOnhand"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:text="jnbfjkdsf"
                android:textColor="#3a3a3c"
                android:textSize="16sp"
                android:typeface="sans"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pcslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pcs"
                android:layout_width="142dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:hint=" PcsperCarton"
                android:textColorHint="@color/textview_text_color"
                android:textSize="16sp"
                android:typeface="sans"></TextView>

            <TextView
                android:id="@+id/pcspercarton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:text="jnbfjkdsf"
                android:textColor="#3a3a3c"
                android:textSize="16sp"
                android:typeface="sans"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="6" >

            <EditText
                android:id="@+id/sl_cartonQty"
                android:background="@drawable/labelbg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="Carton Qty"
                android:imeOptions="actionNext"
                android:textSize="14dp"
                android:inputType="numberDecimal"></EditText>

            <EditText
                android:id="@+id/sl_looseQty"
                android:background="@drawable/labelbg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="Loose Qty"
                android:textSize="14dp"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" >
            </EditText>

            <EditText
                android:id="@+id/sl_qty"
                style="@style/edittext_style"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2"
                android:hint="Qty"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal" >
            </EditText>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>