<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:layout_marginRight="3dp" >

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/transferall"
        android:gravity="center|left"
        android:textColor="@color/title_text_color"
        android:textSize="19sp"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <ImageButton
        android:id="@+id/swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/filter"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:layout_centerVertical="true"
        android:paddingRight="2dp"
        android:src="@mipmap/ic_orientation"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@mipmap/filter_ic"
        android:visibility="visible"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/transferall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/priceTag"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@drawable/image_selector"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/changelayout_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/transferall"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@mipmap/change_ic"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/right_right_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/changelayout_ic"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:contentDescription="@string/title_bar_right_button"
        android:src="@mipmap/grid_2"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/priceTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/filter"
        android:layout_toLeftOf="@+id/filter"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/price_green"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/new_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pageTitle"
        android:layout_alignTop="@+id/filter"
        android:background="@drawable/right_separator"
        android:src="@mipmap/ic_prod_new"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/edit_prod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_separator"
        android:src="@mipmap/ic_prod_edit"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceTag"
        android:layout_toLeftOf="@+id/priceTag"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@mipmap/products"
        android:visibility="gone" />

</RelativeLayout>