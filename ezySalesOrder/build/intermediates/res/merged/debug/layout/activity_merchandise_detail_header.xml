<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="5dp"
        android:background="@drawable/header_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/customerBtnTab"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dip"
            android:layout_weight="0.62"
            android:background="@drawable/rounded_tab_left"
            android:gravity="center"
            android:text="Customer Information"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.1dp"
            android:layout_height="32dp"
            android:background="#96c3fb"
            android:visibility="visible" />

        <Button
            android:id="@+id/pictureBtnTab"
            style="@android:style/Widget.Button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dip"
            android:layout_weight="0.62"
            android:background="@drawable/rounded_tab_right"
            android:gravity="center"
            android:text="Picture"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/customerScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:background="@drawable/cust_bg_white_bg"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/customer_code"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/customerCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:drawablePadding="3dip"
                    android:drawableRight="@mipmap/ic_search_inactive"
                    android:inputType="text"
                    android:padding="5dip"
                    android:text=""
                     android:gravity="center|left"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/customer_name"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/customerName"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"
                     android:gravity="center|left"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/delivery_code"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/deliveryCode"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>
            <!--
                   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:visibility="visible"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Delivery Address"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/deliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                      android:background="@drawable/custom_edittext_bg"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:drawableRight="@drawable/ic_search_inactive"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </EditText>
                  
            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Outlet Name"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/outLetName"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:drawableRight="@mipmap/ic_search_inactive"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"
                     android:gravity="center|left"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Address1"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:gravity="top|left"
                    android:paddingLeft="3dp"                   
                    android:paddingRight="5dip"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Address2"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/address2"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:gravity="top|left"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"                  
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout6"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Address3"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/address3"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:gravity="left|top"
                    android:paddingRight="5dip"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout7"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="Attention"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/attention"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:paddingLeft="3dp"                   
                    android:paddingRight="5dip"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout8"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="PhoneNo"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:imeOptions="actionNext"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"                   
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout9"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="HandphoneNo"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <EditText
                    android:id="@+id/handphoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_margin="5dip"
                    android:background="@drawable/custom_edittext_bg"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dip"
                    android:enabled="false"
                      android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textColor="@color/edittext_text_color"
                    android:textSize="15sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/status"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dip"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/merchandiseStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_spinner_bg"
                        android:entries="@array/merchandise_status" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/cust_horizontal_line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/remarks1"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dip"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/remarks1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edittext_bg"
                        android:gravity="left|top"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="3dp"
                        android:textColor="@color/edittext_text_color"
                        android:textSize="15sp"
                        android:typeface="sans" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center|left"
                    android:hint="@string/remarks2"
                    android:textColorHint="#a7a7a7"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:typeface="sans" >
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dip"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/remarks2"
