                        android:padding="3dp"
                        android:textColor="@color/edittext_text_color"
                        android:textSize="15sp"
                        android:typeface="sans" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
