<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
        android:background="@drawable/product_stock_bg"
    android:weightSum="6.1" >

    <LinearLayout
        android:id="@+id/allLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

    <LinearLayout
        android:id="@+id/ss_prodcode_layout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/ss_prodcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="ProductCode"
            android:textColor="@color/textview_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_name_layout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/ss_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Nameaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/textview_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_cqty_layout"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/ss_c_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="23"
            android:textColor="@color/textview_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_lqty_layout"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/ss_l_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="32"
            android:textColor="@color/textview_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_qty_layout"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/ss_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="45"
            android:textColor="@color/textview_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_foc_layout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_foc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Foc"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_cprice_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_cprice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_price_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_total_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_total"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Total"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_itemdisc_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_item_disc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Item_Disc"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_subTotal_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_subTotal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Sub Total"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_tax_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_tax"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Tax"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_netTotal_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone">

        <TextView
            android:id="@+id/ss_net_total"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Net Total"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ss_exchQty_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_exch_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ss_minsellingprice_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_minselling_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ss_minsellingcartonprice_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_minselling_cartonprice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/itemremarks_layout"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_item_remarks"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ss_currentQty_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_current_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ss_deli_qty_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ss_deli_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ss_arrow_layout"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="3dip"
            android:contentDescription="@string/title_bar_right_button"
            android:src="@drawable/ic_arrow_right"
            android:visibility="invisible" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_data"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="5dip"
        android:layout_weight="6"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:orientation="horizontal"
            android:layout_marginBottom="5dip"
            android:weightSum="6" >

            <!-- Product Name -->

            <TextView
                android:id="@+id/productName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="6"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:orientation="horizontal"
            android:layout_marginBottom="5dip"
            android:weightSum="10" >

            <!-- Product Code -->

            <TextView
                android:id="@+id/pro_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:layout_weight="4.5"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/stock_wholesaleprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="2"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
               
                android:typeface="sans" />

            <TextView
                android:id="@+id/carqty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_weight="1.8"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
               
                android:typeface="sans" 
                />

            <TextView
                android:id="@+id/looqty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1.8"
                android:singleLine="true"
                android:textColor="#717171"
                android:gravity="center"
                android:textSize="14sp"                
                android:typeface="sans"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:orientation="horizontal"
            android:layout_marginBottom="5dip"
            android:weightSum="6" >

            <!-- Product Name -->

            <TextView
                android:id="@+id/pcs_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Pcs :"
                android:textColor="#717171"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/pcs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:typeface="sans" />
            
             <TextView
                android:id="@+id/wt_hide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="2.3"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:visibility="visible"/>
            
            <TextView
                android:id="@+id/wt_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.6"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans"
                android:text="Wt :"
                android:visibility="gone"/>
            
            <TextView
                android:id="@+id/wt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1.7"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:typeface="sans" 
                android:visibility="gone"/>

            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0.7"
                android:singleLine="true"
                android:text="Qty :"
                android:textColor="#717171"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/Quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#717171"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <!-- Quantity -->

    </LinearLayout>

</LinearLayout>