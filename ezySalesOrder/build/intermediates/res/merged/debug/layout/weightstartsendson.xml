<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/yellow_rounded_corner"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Weight"
            android:textColor="@drawable/header_bg"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/hdshadow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shadow_line"
            android:padding="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/startsOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Starts On"
                android:textColor="@drawable/header_bg"
                android:textStyle="bold" />

            <View
                android:id="@+id/stshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shadow_line"
                android:padding="0dp" />

            <Button
                android:id="@+id/stupBtn"
                android:layout_width="53dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@mipmap/timepicker_up_normal" />

            <TextView
                android:id="@+id/stnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/timepicker_input_selected"
                android:gravity="center"
                android:text="1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/stdownBtn"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@mipmap/timepicker_down_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/endsOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Ends On"
                android:textColor="@drawable/header_bg"
                android:textStyle="bold" />

            <View
                android:id="@+id/edshadow"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/shadow_line"
                android:padding="0dp" />

            <Button
                android:id="@+id/edupBtn"
                android:layout_width="53dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@mipmap/timepicker_up_normal" />

            <TextView
                android:id="@+id/ednumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/timepicker_input_selected"
                android:gravity="center"
                android:text="1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/eddownBtn"
                android:layout_width="55dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@mipmap/timepicker_down_normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/okbutton"
            style="@style/button_style"
            android:layout_width="63dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="6sp"
            android:text="OK"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>