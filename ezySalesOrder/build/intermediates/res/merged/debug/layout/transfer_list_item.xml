<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    style="@style/list_item_style"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        
        android:gravity="center" >

        <TextView
            android:id="@+id/ss_slid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ss_slno"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Sl_No"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/ss_prodcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="ProductCode"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:gravity="left" >

        <TextView
            android:id="@+id/ss_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Name"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:id="@+id/ss_c_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="C.Qty"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:id="@+id/ss_l_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="L.Qty"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <TextView
            android:id="@+id/ss_qty"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Qty"
            android:textSize="16dp" />
    </LinearLayout>

