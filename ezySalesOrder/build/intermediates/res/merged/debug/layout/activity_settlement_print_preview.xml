<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="28" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:background="@drawable/home_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Settlement "
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/printer"
            android:layout_width="25dip"
            android:layout_height="25dp"

            android:layout_marginRight="5dip"
            android:layout_gravity="center"
            android:background="@mipmap/ic_menu_print"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="28"
        android:orientation="vertical"
        android:weightSum="14.4" >

        <LinearLayout
            android:id="@+id/companyname_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/companyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="ABC PTE LTD"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/address2_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Jurong East"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/country_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
