            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.8"
                android:text=""
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
