<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/image_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_margin="10dip"
            android:background="@drawable/image_bg"
            android:gravity="center"
            android:orientation="vertical">

            <com.winapp.helper.SquareImageView
                android:id="@+id/productImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dip"
                android:src="@mipmap/no_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight=".3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight=".2"
                    android:gravity="center|left"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/productCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:paddingBottom="5dip"
                    android:text=""
                    android:paddingLeft="10dip"
                    android:textSize="@dimen/text_size_micro"
                    android:textStyle="normal"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="1dip"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dip"
                        android:layout_weight=".4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/label_cc_ll"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight=".2"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cQty_txt"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:gravity="center"
                                android:text="Carton"
                                android:textColor="#A1A2A7"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <TextView

                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text="x"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/cQtyPrice_txt"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:gravity="center"
                                android:text="C.Price"
                                android:textColor="#A1A2A7"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/txt_cc_ll"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/cQty"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_weight=".4"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/textViewsymbol4"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text="x"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/CQtyPrice"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="1dp"
                                android:layout_weight=".4"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/plussymbol_ll"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight=".2"
                            android:gravity="center"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/textViewsymbol5"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="#A1A2A7"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:typeface="sans"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/label_lqty_ll"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight=".2"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/lQty_txt"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:gravity="center"
                                android:text="Loose"
                                android:textColor="#A1A2A7"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text="x"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/lQtyPrice_txt"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"
                                android:gravity="center"
                                android:text="L.Price"
                                android:textColor="#A1A2A7"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:typeface="sans" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_weight=".2">

                            <EditText
                                android:id="@+id/productPrice"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:layout_weight=".4"
                                android:background="@null"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:text="0"
                                android:textSize="13sp"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/textViewsymbol3"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="center"
                                android:text="x"
                                android:textSize="13sp"
                                android:typeface="sans"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/Quantity"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="1dp"
                                android:layout_weight=".4"
                                android:background="@null"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:text="0"
                                android:textSize="13sp"
                                android:typeface="sans"></EditText>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Total_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_marginBottom="3dip"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dip"
                            android:layout_weight=".4"
                            android:gravity="bottom|center"
                            android:text="Total"
                            android:textColor="#C61313"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <LinearLayout
                            android:id="@+id/Total_txt_ll"
                            android:layout_width="match_parent"
                            android:layout_height="0dip"
                            android:layout_marginTop="3dip"
                            android:layout_weight=".7"
                            android:gravity="center|top">

                            <TextView
                                android:id="@+id/textViewsymbol1"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight=".05"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="="
                                android:textColor="#C61313"
                                android:textSize="13sp"
                                android:typeface="sans" />

                            <TextView
                                android:id="@+id/Total"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight=".7"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0.00"
                                android:textColor="#C61313"
                                android:textSize="13sp"
                                android:typeface="sans" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="4">

            <ImageView
                android:id="@+id/delete_img"
                android:layout_width="20dp"
                android:layout_height="0dip"
                android:layout_gravity="center|top"
                android:layout_marginTop="4dip"
                android:layout_weight="2"
                android:src="@mipmap/delete" />

            <ImageView
                android:id="@+id/edit_img"
                android:layout_width="20dp"
                android:layout_height="0dip"
                android:layout_gravity="center|top"
                android:layout_marginTop="4dip"
                android:layout_weight="2"
                android:src="@mipmap/cart_edit" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>