<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:id="@+id/editTextRemarks"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.90"
            android:gravity="top"
            android:maxLines="20"
            android:hint="Remarks"
            android:inputType="text">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_marginRight="2dp"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sm_camera_iv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:contentDescription="@string/title_bar_left_button"
                android:src="@mipmap/ic_summ_photo"/>

            <ImageView
                android:id="@+id/prod_photo"
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".7"
                android:background="@drawable/labelbg"
                android:contentDescription="@string/title_bar_left_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sm_signature_layout"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_marginRight="2dp"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sm_sign_iv"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:contentDescription="@string/title_bar_left_button"
                android:src="@mipmap/ic_summ_sign" />

            <ImageView
                android:id="@+id/sm_signature"
                android:layout_width="0dip"
                android:layout_height="60dip"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="1dip"
                android:layout_weight=".7"
                android:background="@drawable/labelbg"
                android:contentDescription="@string/title_bar_left_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sm_loc_iv"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="1dp"
                android:contentDescription="@string/title_bar_left_button"
                android:src="@mipmap/ic_summ_location"/>

            <EditText
                android:id="@+id/sm_location"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_weight=".7"
                android:background="@drawable/labelbg"
                android:focusable="false"
                android:gravity="center"
                android:hint="Location"
                android:inputType="none"
                android:textColor="#3a3a3c"
                android:textSize="10sp"
                android:typeface="sans">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deli_buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center"
            android:visibility="visible" >

            <Button
                android:id="@+id/deli_addProduct"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="@string/save" />

            <Button
                android:id="@+id/close_ic"
                style="@style/button_style"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="close" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>