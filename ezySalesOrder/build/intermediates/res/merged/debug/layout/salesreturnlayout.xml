<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_grey_bg">

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|left">
            <CheckBox
                android:id="@+id/checkbox"
                style="@style/checkbox_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:focusable="false"/>
            <TextView
                android:id="@+id/custcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="Name"
                android:textColor="#262A33"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:singleLine="true"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <CheckBox
                style="@style/checkbox_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:focusable="false"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/sno"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:textColor="#262A33"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"
                android:text="0.00"
                android:gravity="center|left"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#262A33"
                android:textSize="13dp"
                android:text="0.00"
                android:textStyle="italic"
                android:gravity="center"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/balance_amount"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#262A33"
                android:textSize="15dp"
                android:text="0.00"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#3A6C8D"
                android:textSize="16dp"
                android:text="0.00"
                android:textStyle="bold"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <CheckBox
                style="@style/checkbox_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:focusable="false"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:text="Status"
                android:gravity="center|left"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/overdue_txt"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="15dp"
                android:layout_marginLeft="2dp"
                android:text="Overdue"
                android:textColor="#3A6C8D"
                android:gravity="center|left"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/invoice_signed"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/IsClosed_status"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15dp"
        android:layout_marginLeft="2dp"
        android:text="Status"
        android:gravity="center|left"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/IsPosted_status"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="15dp"
        android:layout_marginLeft="2dp"
        android:text="Status"
        android:gravity="center|left"
        android:textStyle="bold"
        android:visibility="gone"/>

</LinearLayout>