<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listbg_patch"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/exp_slno_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/exp_slid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/exp_slno"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Sl_No"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/expense_code_layout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:visibility="gone">

        <TextView
            android:id="@+id/expense_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expense_desc_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:gravity="left" >

        <TextView
            android:id="@+id/expense_desc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/expense_amt_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:layout_marginRight="4dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/expense_amt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="Net Total"
            android:textColor="@color/textview_text_color"
            android:textSize="16dp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sub_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/subtotal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="subTotal"
                android:textColor="@color/textview_text_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tax_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center" >

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="tax"
                android:textColor="@color/textview_text_color"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/net_layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center" >

            <TextView
                android:id="@+id/netTotal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="3dp"
                android:gravity="start|center"
                android:text="NetTotal"
                android:textColor="@color/textview_text_color"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>