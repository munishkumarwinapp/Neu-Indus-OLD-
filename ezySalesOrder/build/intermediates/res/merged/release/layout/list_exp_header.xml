<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
     android:layout_height="40dip"    
    android:background="@color/list_header_color"
    android:baselineAligned="false"
     android:padding="8dp"
    android:weightSum="3.5" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/lblListHeaderImage"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@mipmap/collapse" />
        
        
         <TextView
            android:id="@+id/listHeader_productcode"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:visibility="gone"/>
         
         
          <TextView
            android:id="@+id/listHeader_productname"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblListHeader"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Palette-100"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight=".5"
         android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/paletteno"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="1000"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
         android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/palettecount"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="123456789.12364"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
