        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnew"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="New" />
    </LinearLayout>
