<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:layout_marginRight="3dp" >

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/save_return"
        android:gravity="center"
        android:textColor="@color/title_text_color"
        android:textSize="19sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/save_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/right_separator"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@mipmap/ic_save_img"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/summary_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save_return"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/save_return"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/save_return"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@mipmap/ic_summary" />

</RelativeLayout>