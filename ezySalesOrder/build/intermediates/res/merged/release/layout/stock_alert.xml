<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:minHeight="450dp"
    android:background="#ebeaea"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_gravity="center"
        android:background="@drawable/ic_bottom_bg">

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:src="@mipmap/ic_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|left"
            android:text="Consignment Details"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:visibility="visible"
            android:src="@mipmap/ic_tick" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@mipmap/ic_title_line_bg"
        />

    <LinearLayout
        android:id="@+id/slnamelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dip"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/sl_namefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:focusable="false"
            android:gravity="center"
            android:inputType="none"
            android:text="productName"
            android:textColor="#222d43"
            android:maxLines="6"
            android:textSize="18sp"
            android:textStyle="bold"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weightLabel"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/cartonQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:text="Product Code"
            android:textColor="#03426e"
            android:textSize="13sp"></TextView>

        <TextView
            android:id="@+id/sl_qty_lb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:layout_weight="2"
            android:text="Total Stock"
            android:textColor="#03426e"
            android:textSize="13sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weightlayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6" >

        <TextView
            android:id="@+id/pCode"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/ic_label_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="000000"
            android:inputType="none"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" >
        </TextView>

        <TextView
            android:id="@+id/sl_qty"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@drawable/ic_label_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="000000"
            android:inputType="none"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="sans" > >
        </TextView>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#242F4B">

    <LinearLayout
        android:id="@+id/customer_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/ss_no"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="start|center"
            android:text="Slno"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ss_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:maxLines="2"
            android:padding="8dp"
            android:text="Consignment Details"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:maxLines="2"
            android:padding="8dp"
            android:text="Expiry Date"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ss_qty"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:padding="8dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Quantity"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ss_return"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="Return"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone"/>



    </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Data Found"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ListView>


</LinearLayout>