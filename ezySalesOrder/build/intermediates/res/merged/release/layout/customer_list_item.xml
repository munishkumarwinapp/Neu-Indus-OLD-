<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/list_item_style"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_cst_code"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/in_cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:hint="aaaa"
            android:paddingLeft="5dp"
            android:text="tyytytytuytyytyyu"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
          />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_cust_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/in_cust_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center|left"
            android:hint="JP2018-0000382djhd"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#717171"
            android:textSize="14sp"
            android:textStyle="italic"
            android:typeface="sans" />


        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="aaaa"
            android:paddingLeft="5dp"
            android:text="Not Visited"
            android:textColor="#717171"
            android:textSize="16sp"
            android:typeface="sans"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="left"
        android:hint="aaaa"
        android:paddingLeft="5dp"
        android:text="tyytytytuytyytyyu"
        android:textColor="#717171"
        android:textSize="14dp"
        android:visibility="gone"
        />

</LinearLayout>